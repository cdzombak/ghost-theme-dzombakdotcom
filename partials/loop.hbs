<article class="gh-card {{post_class}}">
    {{#has tag="#micropost"}}

    <div class="gh-card-link">
        <header class="gh-card-header">
            <h2 class="gh-card-title">{{title}}</h2>
        </header>

        <div class="gh-card-excerpt">
            {{#if custom_excerpt}}
                <p class="cdz-micropost-excerpt">{{custom_excerpt}}</p>
            {{/if}}
            {{content}}
        </div>

        <footer class="gh-card-meta">
            <a href="{{url}}"><time class="gh-card-date" datetime="{{date format="YYYY-MM-DD"}}">{{date format="DD MMM YYYY"}}</time></a>
            <span class="gh-card-duration">{{#primary_tag}}<a href="{{url}}">{{name}}</a>{{/primary_tag}}</span>
            {{^has visibility="public"}}
                {{> icons/star}}
            {{/has}}
        </footer>
    </div>

    {{else}}

    <a class="gh-card-link" href="{{url}}">
        <header class="gh-card-header">
            <h2 class="gh-card-title">{{title}}</h2>
        </header>

        <div class="gh-card-excerpt">{{excerpt}}{{^if custom_excerpt}} â€¦{{/if}}</div>

        <footer class="gh-card-meta">
            <time class="gh-card-date" datetime="{{date format="YYYY-MM-DD"}}">{{date format="DD MMM YYYY"}}</time>
            <span class="gh-card-duration">{{reading_time}}</span>
            {{#if @site.comments_enabled}}
                {{comment_count class="gh-card-comments"}}
            {{/if}}
            {{^has visibility="public"}}
                {{> icons/star}}
            {{/has}}
        </footer>
    </a>

    {{/has}}
</article>
