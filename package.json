{
  "name": "journal-dzombakdotcom",
  "description": "A Ghost theme for dzombak.com",
  "version": "1.0.0",
  "private": true,
  "engines": {
    "ghost": ">=5.0.0",
    "node": "^20.0.0"
  },
  "license": "MIT",
  "author": {
    "name": "Chris Dzombak",
    "url": "https://www.dzombak.com",
    "email": "chris@dzombak.com"
  },
  "docs": "https://github.com/cdzombak/ghost-theme-dzombakdotcom",
  "config": {
    "posts_per_page": 15,
    "image_sizes": {
      "xs": {
        "width": 150
      },
      "s": {
        "width": 300
      },
      "m": {
        "width": 720
      },
      "l": {
        "width": 960
      },
      "xl": {
        "width": 1200
      },
      "xxl": {
        "width": 2000
      }
    },
    "card_assets": true,
    "custom": {
      "logo_subtitle": {
        "type": "text",
        "default": "â€¦ has too many hobbies."
      }
    }
  },
  "scripts": {
    "dev": "gulp",
    "test": "gscan .",
    "zip": "gulp zip",
    "fmt": "prettier --write ."
  },
  "devDependencies": {
    "@tryghost/shared-theme-assets": "2.5.1",
    "autoprefixer": "10.4.21",
    "beeper": "2.1.0",
    "cssnano": "7.0.6",
    "gscan": "4.47.0",
    "gulp": "5.0.0",
    "gulp-concat": "2.6.1",
    "gulp-livereload": "4.0.2",
    "gulp-postcss": "10.0.0",
    "gulp-uglify": "3.0.2",
    "gulp-zip": "5.1.0",
    "ordered-read-streams": "2.0.0",
    "postcss": "8.5.3",
    "postcss-easy-import": "4.0.0",
    "prettier": "3.5.3",
    "pump": "3.0.2"
  }
}
